<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_level1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="一等难度"
        />
    <Button
        android:id="@+id/bt_level2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="二等难度"
        />
    <Button
        android:id="@+id/bt_level3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="三等难度"
        />

    <Button
        android:id="@+id/bt_level4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="四等难度"
        />

    <Button
        android:id="@+id/bt_level5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="五等难度"
        />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        />
    <Button
        android:id="@+id/bt_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送"
        />


</LinearLayout>